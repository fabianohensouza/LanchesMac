
<div class="btn-group">
    <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
        Lanches
    </button>
    <ul class="dropdown-menu">
        @foreach(var categoria in Model)
        {
            <li>
                <a class="dropdown-item" asp-controller="lanche" asp-action="List" style="color:black"
                asp-route-categoria="@categoria.CategoriaNome">@categoria.CategoriaNome</a>
            </li>
        }<li><hr class="dropdown-divider"></li>
        <li>
            <a class="dropdown-item" asp-controller="lanche" asp-action="List" style="color:black"
            asp-route-categoria="">Todos os Lanches</a>
        </li>
    </ul>
</div>