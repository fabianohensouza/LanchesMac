@model IEnumerable<LanchesMac.Models.Lanche>

<div>
    <h2> @ViewData["Title"]</h2>
</div>

<div class="container">
    <div class="row">
        @foreach(var lanche in Model)
        {
            <div class="col-sm-4 col-md-4 col-lg-4">
                <p><img src="@lanche.ImagemUrl" class="img-fluid" /></p>
                <h3>@lanche.Nome</h3>
                <h4>@lanche.Preco.ToString("c")</h4>
                <p>@lanche.DescricaoCurta</p>
            </div>
        }
    </div>
</div>