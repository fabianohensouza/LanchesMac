@model Lanche

<div class="container">
    <div class="row">
        <div class="card">
            <div class="text-center">
                <img src="@Model.ImagemUrl" class="card-img-top" alt="...">
            </div>
            <div class="card-body">
                <h5 class="card-title">@Model.Nome</h5>
                <p class="card-text">@Model.DescricaoDetalhada</p>
                <p class="btn btn-group align-content-lg-end">
                    <a asp-controller="Lanche" asp-action="List" class="btn btn-outline-info">
                        Ver todos os lanches
                    </a>
                    <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra"
                       asp-action="AdicionarItemCarrinho" asp-route-lancheId="@Model.LancheId">
                        Incluir @Model.Nome ao Carrinho
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>
