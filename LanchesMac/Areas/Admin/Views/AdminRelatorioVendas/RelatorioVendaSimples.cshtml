@model IEnumerable<Pedido>

<h2>Pedidos por Período</h2>

<nav class="navbar navbar-dark">
    <div class="container-fluid">
        <form class="navbar-form navbar-left">
            <div class="form-group">
                <label for="minDate" class="col-lg-6 control-label">Data Inicial</label>
                <input type="date" name="minDate" class="form-control" value=@ViewData["minDate"] />
            </div>
            <div class="form-group">
                <label for="minDate" class="col-lg-6 control-label">Data Final</label>
                <input type="date" name="maxDate" class="form-control" value=@ViewData["maxDate"] />
            </div>
            <button type="submit" class="btn btn-success">Filtrar</button>
        </form>
    </div>
</nav>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h4 class="panel-title">Total de Pedidos : @Model.Count()</h4>
        <h4 class="panel-title">Total de Lanches nos Pedidos : @Model.Sum(obj => obj.TotalItensPedido).ToString()</h4>
        <h4 class="panel-title">Valor Total dos Pedidos : @Model.Sum(obj => obj.PedidoTotal).ToString("c")</h4>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.PedidoId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Telefone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PedidoTotal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalItensPedido)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PedidoEnviado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PedidoEntregueEm)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>
                            @Html.DisplayFor(modelItem => item.PedidoId)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.Nome)
                            @Html.DisplayFor(modelItem => item.Sobrenome)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.Telefone)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.PedidoTotal)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.TotalItensPedido)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.PedidoEnviado)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.PedidoEntregueEm)
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>