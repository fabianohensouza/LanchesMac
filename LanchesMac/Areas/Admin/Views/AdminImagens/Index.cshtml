<table border="0" width="100%">
    <tr>
        <td>
            <form method="post" enctype="multipart/form-data" 
                 asp-controller="AdminImagens" asp-action="UploadFiles">
                 <img src="~/images/upload2.png" width="200" height="150" />
                 <div class="form-group">
                     <div class="col-md-10">
                        <p><b>Selecione um ou mais arquivos :</b></p>
                        <input type="file" accept="image/*" name="files" multiple class="button btn-outline-primary" />
                     </div>
                 </div>
                 <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Enviar imagen(s)" class="button btn-outline-primary" />
                    </div>
                </div>
            </form>
        </td>
        <td>
            <form method="post" enctype="multipart/form-data"
                  asp-controller="AdminImagens" asp-action="GetImages">
                <img src="~/images/visualizar1.jpg" width="150" height="150" />
                <div class="form-group">
                    <div class="col-md-10">
                        <p><strong>Visualizar Imagens armazenadas :</strong></p><input type="file" accept="image/*" name="files" multiple class="button btn-outline-primary" />
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Visualizar imagen(s)" class="button btn-outline-primary" />
                    </div>
                </div>
            </form>
        </td>
    </tr>
</table>

<div class="container">
    @if (ViewData["Deletado"] != null)
    {
        <li>@ViewData["Deletado"]</li>
    }
</div>